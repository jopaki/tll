<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %.20logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.tll.dao.schema.SchemaInfo" level="info" />
  <logger name="org.springframework" level="info" />
  <logger name="org.aspectj" level="debug" />
  <logger name="org.springextensions.db4o" level="debug" />
  <logger name="com.tll" level="debug" />
  <logger name="org.testng" level="info" />
  <logger name="org.springframework.orm" level="debug" />
  <logger name="org.apache.velocity" level="info" />
  <logger name="org.apache" level="info" />
  <logger name="org.acegisecurity" level="debug" />
  <logger name="com.db4o" level="debug" />
  <logger name="httpclient" level="info" />
  <logger name="org.springframework.jdbc" level="info" />
  <logger name="org.springframework.transaction" level="debug" />

  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
